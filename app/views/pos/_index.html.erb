<div class="container">
    <div class="row">
      <% if authorize_signed_in? ||hr_signed_in? %>
        <div class="col-md-9">
            <form class = "form-inline" action="#" method="get">
                <div class="input-group">
                    <input type="text" class="form-control" id="system-search" placeholder="Search" name="q" required>
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                    </span>
                </div>
            </form>
               <%= paginate @po%>
             
        </div>
        <div class="col-md-9">
         <table class="table table-striped table-bordered table-condensed" id="table">
                    <thead>
<tr style = 'background-color: white'>
<th> <i class="fa fa-asterisk"></i> Po number </th>
<th><i class="fa fa-desktop"></i>  Asset name</th>
<th><i class="fa fa-plus-circle"></i> Total cost</th>
<th><i class="fa fa-male"></i></i> vendor name</th>
<th><i class="fa fa-book"></i> vendor address</th>
<th><i class="fa fa-check-circle"></i> TAKE actions</th>


</tr>
</thead>
	<tbody>

      
       <% @po.each do |r| %>
      
      <tr class = "poapps">
        <td><%= r.pono %></td>
        <td><%= r.name %></td>
        <td><%= r.total %></td>
        <td><%= r.vname %></td>
       <td> <%= r.vadd %></td>

       <td>
        <%if r.poapps.empty? %>
        <%= button_to "View", r ,method: :get, :class => "btn btn-info"  %>
        <% else %>
        <%= button_to "Action taken" , r , :disabled => :true , :class => "btn btn danger" %>
        <% end %>
        </td>
       </tr>
      
        <% end %>
       
   </tbody>
</table>
<div>
            
            
        </div>
</div>
<%else %>
<div class="col-sm-6 col-md-6">
            <div class="alert alert-danger">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                    Ã—</button>
                <span class="fa fa-hand-right"></span> <strong>Alert..!!</strong>
                <hr class="message-inner-separator">
                <p>
                    You are not authorized to view this page.</p>
            </div>
        </div>
        <%end%>
</div>
</div>


