<%if authorize_signed_in? || hr_signed_in? %>
<div class="container">
    <div class="row">
        <div class="col-md-9">
            <form class = "form-inline" action="#" method="get">
                <div class="input-group">
           <input type="search" id="search" value="" class="form-control" placeholder="Search using Fuzzy searching">
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                    </span>
                </div>
            </form>
             
             <%= paginate @po%>
        </div>
        <div class="col-md-9">
         <table class="table table-striped table-bordered table-condensed" id="table">
                    <thead>
							<tr style = 'background-color: white'>
								<th> <i class="fa fa-male"></i> Po number </th>
								<th><i class="fa fa-bars"></i>  Asset name</th>
								<th><i class="fa fa-envelope-o"></i> Total cost</th>
								<th><i class="fa fa-map-marker"></i> vendor name</th>
								<th><i class="fa fa-phone"></i> vendor address</th>
								<th><i class="fa fa-phone"></i>  TAKE actions</th>
								
							
							</tr>
	</thead>
	<tbody>

      
       <% @po.each do |r| %>
      
      <tr>
        <td><%= r.pono %></td>
        <td><%= r.name %></td>
        <td><%= r.total %></td>
        <td><%= r.vname %></td>
       <td> <%= r.vadd %></td>
       <td><%= button_to "Remove", r, method: :delete, :class => "btn btn-danger" ,data: { confirm: "Are you sure?" } %></td>
       <tr>
      
        <% end %>
       
   </tbody>
</table>
<div>
            
            
        </div>
</div>
</div>

<% else %>
<div class = "alert alert-danger">
    you  do not have any authentication to view this page .
</div>
<% end %>
</div>


