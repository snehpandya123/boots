<div class = "container">
	<% if authorize_signed_in? || hr_signed_in? %>
    <div class = "well">
         <div class="col-md-9">
            <form class = "form-inline" action="#" method="get">
                <div class="input-group">
                    <input type="text" class="form-control" id="system-search" placeholder="Search" name="q" required>
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                    </span>
                </div>
            </form>
             
             
        </div>
	<table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr style = 'background-color: white'>
                    <th> <i class="fa fa-male"></i>Requisitioner</th>
                    <th><i class="fa fa-bars"></i>Name</th>
                    
                    <th><i class="fa fa-bars"></i>Received on</th>
                    
                    <th><i class="fa fa-bars"></i>Invoice</th>
                     <th><i class="fa fa-bars"></i>STOCK</th>
                    
                </tr>
            </thead>
           			 
            <tbody>
            	<% @stock.each do |s| %>
            	<tr>
                    <%= form_for (@allot) do |f| %>
                    <%= f.hidden_field :stock_id , :value=> "#{s.id}" %>
            			<td><%=s.requ %></td>
            			<td><%=s.name %></td>
            			<td><%=s.invoice %></td>
            			<td><%=s.created_at %></td>
                                   		<td>
                                            <%if s.allots.empty? %>
                                            <%= f.submit "allot" ,:class => "btn btn-primary" %>
                                            <% else %>
                                            <%= button_to "alloted" , s , :disabled => :true , :class=> "btn btn-danger" %>
                                            <% end %> 
                                        </td>
            		<% end %>
            	</tr>
            	<%end %>
              
                      
           
           
            </tbody>
            
        </table>
	
	</div>
    <% else %>
    <div class="col-sm-6 col-md-6">
            <div class="alert alert-danger">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                    Ã—</button>
                <span class="fa fa-hand-right"></span> <strong>Alert..!!</strong>
                <hr class="message-inner-separator">
                <p>
                    You are not authorized to view this page.</p>
            </div>
        </div>
        <% end %>
</div>

 
	




