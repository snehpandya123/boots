<div class = "container">
	<div class = "well">
         <div class="col-md-9">
            <form class = "form-inline" action="#" method="get">
                <div class="input-group">
                    <input type="text" class="form-control" id="system-search" placeholder="Search" name="q" required>
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                    </span>
                </div>
            </form>
             
             
        </div>
	<table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr style = 'background-color: white'>
                    <th> <i class="fa fa-male"></i>Requisitioner</th>
                    <th><i class="fa fa-bars"></i>Name</th>
                    
                    <th><i class="fa fa-bars"></i>Received on</th>
                    
                    <th><i class="fa fa-bars"></i>Invoice</th>
                     <th><i class="fa fa-bars"></i>STOCK</th>
                    
                </tr>
            </thead>
           			 
            <tbody>
            	<% @stock.each do |s| %>
            	<tr>
                    <%= form_for (@allot) do |f| %>
                    <%= f.hidden_field :stock_id , :value=> "#{s.id}" %>
            			<td><%=s.requ %></td>
            			<td><%=s.name %></td>
            			<td><%=s.invoice %></td>
            			<td><%=s.created_at %></td>
            			
            		<td><%= f.submit "allot" ,:class => "btn btn-primary" %></td>
            		        		<% end %>
            	</tr>
            	<%end %>
              
                      
           
           
            </tbody>
            
        </table>
	
	</div>
</div>

 
	




