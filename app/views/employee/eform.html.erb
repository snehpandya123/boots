<div class = "container">
<table class="table table-striped table-bordered table-condensed">

     <thead>
              <tr style = 'background-color: white'>
                <th> <i class="fa fa-male"></i>Asset name</th>
                <th><i class="fa fa-bars"></i>Requested at</th>
                <th><i class="fa fa-envelope-o"></i>Send for approval</th>
                <th><i class="fa fa-map-marker"></i>Invoice</th>
                <th><i class="fa fa-phone"></i>Decision</th>
               
                
              
              </tr>
  </thead>


<tbody>

<% @emp.each do |x| %>
<tr>
  <td> <%= x.name %></td>
   <td> <%= x.created_at %></td>
    <% x.pos.each do |p| %>
    <td> <%=p.podate%></td>
       <td> <%=p.pono %></td>
       
         <% p.poapps.each do |r| %>
          <td>
            <% if "#{r.action}" == "approve" %>
             <span class="label label-success">
            <%= r.action %></span>

            <% elsif "#{r.action}" == "disapprove" %> 
           <span class="label label-warning">
            <%= r.action %></span>
            <% else %>
             <span class="label label-warning">
            waiting..</span>
            <% end %>
              

          </td>
        <%end %>
<%end %>
</tr>
<% end %></tbody>

</table>
</div>


     
     
        
       
         





