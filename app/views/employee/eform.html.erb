
<div class = "container">
  <% if emp_signed_in? %>
<table class="table table-striped table-bordered table-condensed">

     <thead>
              <tr style = 'background-color: white'>
                <th> <i class="fa fa-male"></i>Asset name</th>
                <th><i class="fa fa-bars"></i>Requested at</th>
                <th><i class="fa fa-envelope-o"></i>Send for approval</th>
                <th><i class="fa fa-map-marker"></i>Invoice</th>
                <th><i class="fa fa-phone"></i>Decision</th>
                <th><i class="fa fa-phone"></i>Send on</th>
                <th><i class="fa fa-phone"></i>Received on</th>
                <th><i class="fa fa-phone"></i>Alloted on</th>
               
                
              
              </tr>
  </thead>


<tbody>

<% @emp.each do |x| %>
<tr>
  <td> <%= x.name %></td>
   <td> <%= x.created_at %></td>
    <% x.pos.each do |p| %>
    <td> <%=p.podate%></td>
       <td> <%=p.pono %></td>
       
         <% p.poapps.each do |r| %>
          <td>
            <% if "#{r.action}" == "approve" %>
             <span class="label label-success">
            <%= r.action %></span>

            <% elsif "#{r.action}" == "disapprove" %> 
           <span class="label label-warning">
            <%= r.action %></span>
            <% else %>
             <span class="label label-warning">
            waiting..</span>
            <% end %>
              

          </td>
        <%end %>
         <% p.ssends.each do |j| %>
                                                      <td>
                                                        <%= j.created_at %>

                                                      </td>
                                                      <% j.stocks.each do |n| %>
                                                      <td>
                                                      <%= n.created_at %>
                                                      </td>
                                                        <% n.allots.each do |l| %>
                                                        <td>
                                                          <%=l.created_at %>
                                                        </td>
                                                        <%end %>
                                                      <%end %>
                                                      <% end %>
<%end %>
</tr>
<% end %></tbody>

</table>
<%else%>
<div class="col-sm-6 col-md-6">
            <div class="alert alert-danger">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                    Ã—</button>
                <span class="fa fa-hand-right"></span> <strong>Alert..!!</strong>
                <hr class="message-inner-separator">
                <p>
                    You are not authorized to view this page.</p>
            </div>
        </div>
        <%end%>
</div>



     
     
        
       
         





