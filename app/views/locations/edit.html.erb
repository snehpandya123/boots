<div class = "container">
<d class = "red">
<% if @location.errors.any? %>
<div id="error_explanation">
<h2><%= pluralize(@location.errors.count, "error") %>
prohibited this <%= @location.class.to_s.underscore.humanize.downcase %>
from being saved:</h2>
<p>There were problems with the following fields:</p>
<ul>
<% @location.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
</div>
<% end %>
</d>
  
 <p style = "font-size:20pt;color: MidnightBlue"><i><b>ADD LOCATION</b></i></p>
	 <hr class="colorgraph">   
<%= form_for(@location) do |f| %>
<table>
	<tr>
	<td>
	<%= f.label :Name_of_location, :style => "color: #005C1F; font-size: 12pt; font-weight: bold;" %></td><td>
			<%= f.text_field :location, :style => "color: #005C1F; font-size: 12pt; font-weight: bold;" %></td>
		</tr>
		<tr>
		
			<td><%= f.submit "Update", :class => "btn btn-success", :style => "color: white; font-size: 12pt; font-weight: bold;" %></td>
		</tr>
	</table>
		
<% end %>
</div>