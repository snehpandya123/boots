<div class="container">
<div class="row-fluid">

<div class="span8">
<table>

<tr>
<td>
<h2>Sign up</h2>
</td>
</tr>
<tr>
<td>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

<%= f.label :Email %><br /> 
<%= f.email_field :email, :autofocus => true , :placeholder => "Enter email.." %>
<%= f.label :username %><br /> 
<%= f.text_field :username ,:placeholder => "Enter username.." %>
<%= f.label :password %><br />
<%= f.password_field :password , :placeholder=> "password.." %>
<%= f.label :password_confirmation %><br />
<%= f.password_field :password_confirmation , :placeholder => "password_confirmation.." %>
<div><%= f.submit "Sign up" ,:class => "btn btn-success" %></div>
<% end %>
</td>
</tr>
</table>
</div>
<div class = "span4">
<div class = "well">
<a class = "red">
<%= devise_error_messages! %>
</a>
</div>
</div>
</div>
</div>
