 <div class="container-fluid">
  <div class="row-fluid">
   
       	<div class="span8">
       	</div>
       
      	 <div class="span4">
       	 <table>
       		 <tr>
        		<td>
    
	                   <%= image_tag("bindi.jpg", :alt => "Sample App", :class => "round" , :width => "700") %>
    	          
             	 </td>
             </tr>	

				<tr>
					<td>
						<h2>Sign up</h2>
					</td>
				</tr>
					<tr>
						<td>
    							<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
						
						      <div class = "well">
                    <a class = "red">
  								<%= devise_error_messages! %>
						       </a>
                   </div>

						  
  			<%= f.label :Email %><br /> 
  	<%= f.email_field :email, :autofocus => true , :placeholder => "Email" %>
    <%= f.label :username %><br /> 
    <%= f.text_field :username %>
  <div>
   	<%= f.label :password %><br />

  
   	<%= f.password_field :password , :placeholder=> "password" %>
  
  	</div>
<div>
  		<%= f.label :password_confirmation %><br />
  	
  	
  	<%= f.password_field :password_confirmation , :placeholder => "password_confirmation" %>
  </div>

 <div><%= f.submit "Sign up" ,:class => "btn btn-success" %></div>
<% end %></td>
</tr>


</table>
</div>
</div>
</div>

