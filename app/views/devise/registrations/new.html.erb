<div class="container">
	<div class="row-fluid">
		<div class="span8">
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
					<table >
						<p style = "font-size:20pt;color: MidnightBlue; align: left"><i class="fa fa-pencil"></i><i><b>SIGN UP</b></i></p>
							<hr class="colorgraphs">
					<tr>	
						<td>
							
								<%= f.label :Email, :style => "color:  black; font-size: 12pt; font-weight: bold;" %>
						
								<%= f.email_field :email, :autofocus => true , :placeholder => "Enter email..", :style => "color:  black; font-size: 12pt; font-weight: bold;" %>
						</td>
				
						<td>
							<%= f.label :username , :style => "color:  black; font-size: 12pt; font-weight: bold;"%>
						
							<%= f.text_field :username ,:placeholder => "Enter username.." %>
						</td>
					</tr>
		<tr>
	<td>
<%= f.label :password, :style => "color:  black; font-size: 12pt; font-weight: bold;" %>
<%= f.password_field :password , :placeholder=> "password.." %>
</td>
<td>
<%= f.label :password_confirmation , :style => "color:  black; font-size: 12pt; font-weight: bold;"%>
<%= f.password_field :password_confirmation , :placeholder => "password_confirmation.." %>
</td>
</tr>
<tr><td><%= f.submit "Sign up" ,:class => "btn btn-success", :style => "color:  white; font-size: 12pt; font-weight: bold;" %>
</td>
</tr>
<% end %>
</table>
<hr class="colorgraphs">
</div>
<div class = "span4">
<div class = "well">
<a class = "red">
<%= devise_error_messages! %>
</a>
</div>
</div>
</div>
</div>